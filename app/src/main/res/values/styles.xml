<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greyWhite</item>
        <item name="colorPrimaryDark">@color/greyWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="buttonColor" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/buttonColor</item>
        <item name="rippleColor">@color/rippleButton</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>

    </style>

</resources>
