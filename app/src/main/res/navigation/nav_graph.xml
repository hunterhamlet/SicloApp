<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.hamon.sicloapp.view.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_calendarFragment"
            app:destination="@id/calendarFragment" />
        <action
            android:id="@+id/action_mainFragment_to_enrollClasFragment"
            app:destination="@id/enrollClasFragment" />
    </fragment>

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.hamon.sicloapp.view.CalendarFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar" />

    <fragment
        android:id="@+id/enrollClasFragment"
        android:name="com.hamon.sicloapp.view.EnrollClasFragment"
        android:label="fragment_enroll_clas"
        tools:layout="@layout/fragment_enroll_clas" />

</navigation>